                            <TextBox Name="SqlInput" BorderThickness="0" Background="Transparent" Padding="8,6"/>
                        </Border>
                        <Button Name="SqlButton" Width="220" Background="#2196F3" Foreground="#212121" Padding="10,6" Click="SqlButton_Click" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="bd" CornerRadius="6" Background="{TemplateBinding Background}" BorderBrush="#9E9E9E" BorderThickness="1" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="bd" Property="BorderBrush" Value="#616161"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="bd" Property="Background" Value="#B3E5FC"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter TargetName="bd" Property="Opacity" Value="0.6"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <TextBlock Name="SqlResult" Margin="8,8,0,0" Foreground="#2196F3" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

