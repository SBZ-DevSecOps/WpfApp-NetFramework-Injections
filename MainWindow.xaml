                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="bd" Property="BorderBrush" Value="#616161"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="bd" Property="Background" Value="#B3E5FC"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter TargetName="bd" Property="Opacity" Value="0.6"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <TextBlock Name="ReflResult" Margin="8,8,0,0" Foreground="#2196F3" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 15 Assembly Load -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="#2196F3" Background="#263238" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="AsmLabel" FontWeight="Bold" FontSize="16" Foreground="#2196F3"/>
                        <TextBlock Name="AsmDesc" FontSize="12" Margin="0,3" Foreground="White"/>
                        <Border CornerRadius="6" Background="White" BorderBrush="#BDBDBD" BorderThickness="1" Width="360" Margin="0,10,0,8">
                            <TextBox Name="AsmInput" BorderThickness="0" Background="Transparent" Padding="8,6"/>
                        </Border>
                        <Button Name="AsmButton" Width="220" Background="#2196F3" Foreground="#212121" Padding="10,6" Click="AsmButton_Click" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="bd" CornerRadius="6" Background="{TemplateBinding Background}" BorderBrush="#9E9E9E" BorderThickness="1" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="bd" Property="BorderBrush" Value="#616161"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="bd" Property="Background" Value="#B3E5FC"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter TargetName="bd" Property="Opacity" Value="0.6"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <TextBlock Name="AsmResult" Margin="8,8,0,0" Foreground="#2196F3" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

            </UniformGrid>

        </StackPanel>
    </ScrollViewer>
</Window>